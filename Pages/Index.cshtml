@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="cont vh-100 d-flex align-items-center justify-content-center">
    <div class="auth-container rounded shadow-sm p-4">
        <h1>Welcome!</h1>
        <input type="radio" name="auth-toggle" id="signin-toggle" class="hidden" checked>
        <input type="radio" name="auth-toggle" id="signup-toggle" class="hidden">
        <div class="toggle-buttons">
            <label for="signin-toggle" class="toggle-label rounded-start">Sign In</label>
            <label for="signup-toggle" class="toggle-label rounded-end">Sign Up</label>
        </div>
        <div class="auth-forms">
            <!-- Login Form -->
            <form method="post" id="signin-form" class="auth-form" asp-page-handler="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required minlength="1">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
                <div class="text-center">
                    <a href="#" class="forgot-password">Forgot your password?</a>
                </div>
            </form>

            <!-- Signup Form -->
            <form method="post" id="signup-form" class="auth-form" asp-page-handler="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter your full name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" required minlength="1">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}