@page "/admin-panel"
@model AdminPanelModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Panel";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/components/admin.css" />
</head>

<body>
    <div class="w-100 px-1">
        <!-- Toolbar -->
        <h2 class="mb-3 mt-4 text-center">User Management</h2>
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 px-4 gap-3">
            <form method="post" class="d-flex flex-wrap justify-content-center justify-content-md-start gap-2">
                <input type="hidden" name="selectedUserIds" id="selectedUserIds" />
                <button type="submit" asp-page-handler="BlockUsers" class="btn btn-warning">Block</button>
                <button type="submit" asp-page-handler="UnblockUsers" class="btn btn-success">Unblock</button>
                <button type="button" class="btn btn-danger" id="deleteBtn">Delete</button>
                <div id="deleteConfirmation" class="d-none mt-2">
                    <span>Delete selected users?</span>
                    <button type="submit" asp-page-handler="DeleteUsers"
                        class="btn btn-sm btn-danger ms-2">Confirm</button>
                    <button type="button" class="btn btn-sm btn-secondary ms-1" onclick="cancelDelete()">Cancel</button>
                </div>
            </form>
            <div class="w-90 w-md-auto">
                <input type="search" class="form-control" placeholder="Search users...">
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th><input type="checkbox" id="selectAllCheckbox"></th>
                        <th><a
                                href="?sortBy=name&asc=@(Request.Query["sortBy"] != "name" || Request.Query["asc"] != "True")">Name</a>
                        </th>
                        <th><a
                                href="?sortBy=email&asc=@(Request.Query["sortBy"] != "email" || Request.Query["asc"] != "True")">Email</a>
                        </th>
                        <th><a
                                href="?sortBy=lastSeen&asc=@(Request.Query["sortBy"] != "lastSeen" || Request.Query["asc"] != "True")">Last
                                Seen</a></th>
                        <th><a
                                href="?sortBy=registerTime&asc=@(Request.Query["sortBy"] != "registerTime" || Request.Query["asc"] != "True")">Register
                                Time</a></th>
                        <th><a
                                href="?sortBy=status&asc=@(Request.Query["sortBy"] != "status" || Request.Query["asc"] != "True")">Status</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        var statusClass = user.Status == "active" ? "status-active" : "status-blocked";
                        <tr>
                            <td><input type="checkbox" class="user-checkbox" value="@user.Id" /></td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@AdminPanelModel.GetTime(user.LastLogin)</td>
                            <td>@user.RegistrationTime.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="status-badge @statusClass">
                                    @user.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.querySelector('form').addEventListener('submit', function () {
            const selectedIds = Array.from(document.querySelectorAll('.user-checkbox:checked'))
                .map(cb => cb.value);
            document.getElementById('selectedUserIds').value = selectedIds.join(',');
        });

        document.getElementById('selectAllCheckbox').addEventListener('change', function () {
            document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = this.checked);
        });

        document.getElementById('deleteBtn').addEventListener('click', function () {
            if (document.querySelectorAll('.user-checkbox:checked').length > 0) {
                this.classList.add('d-none');
                document.getElementById('deleteConfirmation').classList.remove('d-none');
            }
        });

        function cancelDelete() {
            document.getElementById('deleteConfirmation').classList.add('d-none');
            document.getElementById('deleteBtn').classList.remove('d-none');
        }

    </script>
</body>

</html>